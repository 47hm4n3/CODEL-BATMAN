<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context-4.1.xsd
      http://www.springframework.org/schema/tx
      http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
    	<property name="driverClassName" value="com.mysql.jdbc.Driver" />
    	<property name="url" value="jdbc:mysql://localhost/agenda" />
    	<property name="username" value="root" />
    	<property name="password" value="root" />
    	<property name="initialSize" value="3" />
    	<property name="maxActive" value="10" />
	</bean>
  	
  	<bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
  	<!-- <bean id="sessionFactory" class="org.springframework.orm.hibernate4.HibernateTransactionManager">-->
  	
        <property name="dataSource" ref="dataSource" />
        <property name="configLocation" value="classpath:hibernate.cfg.xml" />
        <property name="hibernateProperties" >
        <props>
        <prop key="dialect">org.hibernate.dialect.MySQLDialect</prop>
        <prop key="hibernate.show.sql">true</prop>
        <prop key="hibernate.hbm2ddl.auto">update</prop>
        </props>
        </property>
   	</bean>
    <bean  id="Contact" class="com.sar2016.entities.Contact" scope="prototype">
    </bean>
    <bean  id="PhoneNumber" class="com.sar2016.entities.PhoneNumber" scope="prototype">
    </bean>
    <bean  id="Address" class="com.sar2016.entities.Address" scope="prototype">
    </bean>
    <bean  id="Enterprise" class="com.sar2016.entities.Enterprise" scope="prototype">
    </bean>
    <bean  id="ContactGroup" class="com.sar2016.entities.ContactGroup" scope="prototype">
    </bean>
    <bean  id="User" class="com.sar2016.entities.User" scope="prototype">
    </bean>
   	<bean id="ContactGroupDAO" class="com.sar2016.dao.ContactGroupDAO">
   		<property name="sessionFactory" ref="sessionFactory" />
  	</bean>
  	<bean id="PhoneNumberDAO" class="com.sar2016.dao.PhoneNumberDAO">
  		<property name="sessionFactory" ref="sessionFactory" />
  	</bean>
  	<bean id="AddressDAO" class="com.sar2016.dao.AddressDAO">
  		<property name="sessionFactory" ref="sessionFactory" />
  	</bean>
	<bean id="ContactDAO" class="com.sar2016.dao.ContactDAO">
		<property name="sessionFactory" ref="sessionFactory" />
  	</bean>
    <bean id="EnterpriseDAO" parent="ContactDAO" class="com.sar2016.dao.EnterpriseDAO">
  	</bean>
  	<bean id="UserDAO" class="com.sar2016.dao.UserDAO">
   		<property name="sessionFactory" ref="sessionFactory" />
  	</bean>
  	<bean id="AddressService" class="com.sar2016.services.AddressService">
  	<property name="dao" ref="AddressDAO"/>
  		</bean>
  	<bean id="ContactService" class="com.sar2016.services.ContactService">
  	  	<property name="dao" ref="ContactDAO"/>
  	</bean>
  	<bean id="ContactGroupService" class="com.sar2016.services.ContactGroupService">
  	  	<property name="dao" ref="ContactGroupDAO"/>
  	</bean>
    <bean id="EnterpriseService" class="com.sar2016.services.EnterpriseService">
  		<property name="dao" ref="EnterpriseDAO"/>
  	</bean>
  	<bean id="PhoneNumberService" class="com.sar2016.services.PhoneNumberService">
  	  	<property name="dao" ref="PhoneNumberDAO"/>
  	</bean>
  	<bean id="UserService" class="com.sar2016.services.UserService">
  	  	<property name="dao" ref="UserDAO"/>
  	</bean>
    <bean id="hibernateTemplate" class="org.springframework.orm.hibernate4.HibernateTemplate">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="checkWriteOperations" value="false"/>
    </bean>
    
    <tx:annotation-driven transaction-manager="transactionManager"/>
    
    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    
	<bean id="jmxExporter" class="org.springframework.jmx.export.MBeanExporter">
    	<property name="beans">
       		<map>
            	<entry key="Hibernate:application=Statistics" value-ref="hibernateStatisticsBean"/>
        	</map>
    	</property>
	</bean>
	<bean id="hibernateStatisticsBean" class="com.sar2016.entities.HibernateStatisticsFactory">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
    
</beans>
